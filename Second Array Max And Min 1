import java.util.*;
public class SecondLargestSecondSmallestSum {
    public static int findSum(int[] arr) {
        List<Integer> evenPosElements = new ArrayList<>();
        List<Integer> oddPosElements = new ArrayList<>();
        for (int i = 0; i < arr.length; i++) {
            if (i % 2 == 0) {
                evenPosElements.add(arr[i]);
            } else {
                oddPosElements.add(arr[i]);
            }
        }
        Collections.sort(evenPosElements);
        int secondLargestEven = evenPosElements.get(evenPosElements.size() - 2);
        Collections.sort(oddPosElements);
        int secondSmallestOdd = oddPosElements.get(1);

        return secondLargestEven + secondSmallestOdd;
    }
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        int[] arr = new int[n];
        for (int i = 0; i < n; i++) {
            arr[i] = scanner.nextInt();
        }
        int result = findSum(arr);
        System.out.println("Sum=" + result);
        scanner.close();
    }
}
