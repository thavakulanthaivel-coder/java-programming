import java.util.Scanner;
public class Calculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int num1 = scanner.nextInt();
        int num2 = scanner.nextInt();
        char operator = scanner.next().charAt(0); 
        double result;
        switch (operator) {
            case '+':
                result = num1 + num2;
                System.out.println("Addition of two number is " + result);
                break;
            case '-':
                result = num1 - num2;
                System.out.println("Subtraction of two number is " + result);
                break;
            case '*':
                result = num1 * num2;
                System.out.println("Multiplication of two number is " + result);
                break;
            case '/':
                if (num2 != 0) {
                    result = (double) num1 / num2;
                    System.out.println("Division of two number is " + result);
                } else {
                    System.out.println("Cannot divide by zero");
                }
                break;
            case '%':
                if (num2 != 0) {
                    result = num1 % num2;
                    System.out.println("Modulo of two number is " + result);
                } else {
                    System.out.println("Cannot modulo by zero");
                }
                break;
            default:
                System.out.println("Invalid Input");
        }

        scanner.close();
    }
}
