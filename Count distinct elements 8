import java.util.*;
public class DistinctElementsCounter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        Set<Integer> distinctSet = new HashSet<>();
        for (int i = 0; i < n; i++) {
            int num = scanner.nextInt();
            distinctSet.add(num); // HashSet automatically handles duplicates
        }
        int count = distinctSet.size();
        if (count == 1) {
            System.out.println("There are 1 distinct element in the array.");
        } else {
            System.out.println("There are " + count + " distinct elements in the array.");
        }
        scanner.close();
    }
}
